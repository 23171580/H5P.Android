<?xml version="1.0" encoding="utf-8"?>
<!-- 手机找回密码第一步 -->
<com.qihoo360.accounts.ui.v.FindPwdByMobileView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/findpwd_by_mobile_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="@dimen/qihoo_accounts_padding" >

    <!-- 输入手机号 -->

    <RelativeLayout
        android:id="@+id/qihoo_accounts_findpwd_by_mobile_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/qihoo_accounts_input_box_height"
        android:background="@drawable/qihoo_accounts_input_border"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/findpwd_by_mobile_delete_tel"
            style="@style/qihoo_accounts_input_delete_btn_style"
            android:layout_alignParentRight="true"
            android:visibility="gone" />

        <EditText
            android:id="@+id/findpwd_by_mobile_text"
            style="@style/qihoo_accounts_input_text_style"
            android:layout_toLeftOf="@+id/findpwd_by_mobile_delete_tel"
            android:hint="@string/qihoo_accounts_findpwd_by_mobile_inputphone_hint"
            android:inputType="number"
            android:maxLength="11" />
    </RelativeLayout>

   
    <!-- 下一步button -->

    <Button
        android:id="@+id/findpwd_by_mobile_next"
        style="@style/qihoo_accounts_main_btn_style"
        android:layout_width="fill_parent"
        android:layout_marginTop="@dimen/qihoo_accounts_input_boxs_margin"
        android:text="@string/qihoo_accounts_findpwd_by_mobile_next" />

       
    <!-- 自动获取短信提示 -->
    <TextView
            android:id="@+id/findpwd_sms_tips"
            style="@style/qihoo_accounts_tip_text_style"
            android:layout_marginTop="@dimen/qihoo_accounts_input_boxs_margin"
            android:background="@null"
            android:textSize="@dimen/qihoo_accounts_textsize_tiny"
            android:text="@string/qihoo_accounts_findpwd_sms_tips"
            />
    
    <!-- “其他方式找回密码”button -->

    <TextView
        android:id="@+id/findpwd_by_other_button"
        style="@style/qihoo_accounts_link_btn_style"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/qihoo_accounts_input_boxs_margin"
        android:text="@string/qihoo_accounts_findpwd_by_other" />

</com.qihoo360.accounts.ui.v.FindPwdByMobileView>